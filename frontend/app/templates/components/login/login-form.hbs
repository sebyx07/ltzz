<div class="form-group">
  {{input type="text" class="form-control" value=username placeholder="username" required=true}}
</div>
<div class="form-group">
  {{input type="password" class="form-control" value=password placeholder="password" required=true}}
</div>
<button type="submit" class="btn btn-success btn-block">Login</button>
<p class="text-center m-t-xs text-sm">Do not have an account?</p>
{{#link-to "register" class="btn btn-default btn-block m-t-md"}}
  Create an account
{{/link-to}}